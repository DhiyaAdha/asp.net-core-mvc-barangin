@page
@model barangin.Models.Barang

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Update Page</title>
</head>
<body>

    <h1>Halaman Update</h1>

    @if (ViewBag.BarangDetail != null)
    {
        <form method="post" asp-action="SubmitUpdate" asp-route-id="@ViewBag.BarangDetail.Id" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <input type="hidden" name="_method" value="PUT" />
            
            <div>
                <label for="Id">ID: </label>
                <span>@ViewBag.BarangDetail.Id</span>
                <input type="hidden" id="Id" name="Id" value="@ViewBag.BarangDetail.Id" />
            </div>

            <div>
                <label for="NamaBarang">Nama Barang:</label>
                <input type="text" id="NamaBarang" name="nama_barang" value="@ViewBag.BarangDetail.nama_barang" required />
            </div>

            <div>
                <label for="Qty">Qty:</label>
                <input type="number" id="Qty" name="Qty" value="@ViewBag.BarangDetail.Qty" required />
            </div>

            <div>
                <button type="submit">Update</button>
            </div>
        </form>
    }
    else
    {
        <p>Data barang tidak ditemukan.</p>
    }

    <div>
        <a href="/Barang"><button type="button">Back to Home</button></a>
    </div>

</body>
</html>
