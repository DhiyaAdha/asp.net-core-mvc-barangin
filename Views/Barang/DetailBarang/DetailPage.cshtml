@page

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Detail Page</title>
</head>
<body>

    <h1>Halaman Detail</h1>

    <form method="get" action="/Barang/Detail/{id}">
        <div>
            <label for="Id">ID: </label>
            @* <input type="text" id="Id" name="Id" value="@ViewBag.BarangDetail.Id" readonly /> *@
            <span>@ViewBag.BarangDetail.Id</span>
        </div>

        <div>
            <label for="NamaBarang">Nama Barang:</label>
            @* <input type="text" id="NamaBarang" name="NamaBarang" value="@ViewBag.BarangDetail.nama_barang" required /> *@
            <span>@ViewBag.BarangDetail.nama_barang</span>
        </div>

        <div>
            <label for="Qty">Qty:</label>
            @* <input type="number" id="Qty" name="Qty" value="@ViewBag.BarangDetail.Qty" required /> *@
            <span>@ViewBag.BarangDetail.Qty</span>
        </div>

        <div>
            <a href="/"><button type="button">Back to Home</button></a>
        </div>
        <div>
            <a href="/Barang/Update"><button type="button">Update data</button></a>
        </div>
    </form>

</body>
</html>
